<div class="container">

  <div class="row">
    <div class="col-4">

      <h3>Add Tags To plant <%= @plant.name %></h3>

      <%= simple_form_for [@plant, @plant_tag] do |f| %>

        <%= f.input :tag, collection: Tag.all, input_html: { multiple: true, class: 'multiple-select', data: { controller: 'tom-select'} }, include_hidden: false %>

        <%= f.submit 'Add Tag', class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>

</div>
